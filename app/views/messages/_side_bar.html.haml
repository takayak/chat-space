
.side-bar
  .top-item
    .inner
      .bar_name.samevalue
        .left-column
          = current_user.name
        .right-column
          = link_to new_group_path do
            = icon('fas','edit',class:'right-column--edit')
          = link_to edit_user_path(current_user) do
            = icon('fas','cog',class:'right-column--cog')
      .bar_logo.samevalue
        - current_user.groups.each do |group|
          .group
            = link_to group_messages_path(group) ,class:'link'do
              .group__name
                = group.name
            .bar-message.samevalue
              = group.show_last_message



  


  
